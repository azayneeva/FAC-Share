{
  "manifest_version": 2,
  "name": "FAC Share - Share bookmarks with the FAC community",
  "version": "0.4",
  "browser_action": {
     "default_icon": "favicon.ico",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "https://fac-share.herokuapp.com/"
   ],
   "background": {
       "persistent": false,
       "scripts": ["bg.js"]
     },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
